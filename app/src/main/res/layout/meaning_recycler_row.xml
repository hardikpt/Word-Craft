<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner"
    android:padding="16dp"
    android:layout_marginVertical="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noun"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/progress"
        android:id="@+id/part_of_speech_textview"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Defination : "
        android:textSize="16sp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#283593"
        tools:text="1 defination \n\n 2 another \n\n 3 third"
        android:id="@+id/definations_textview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Synonyms : "
        android:textColor="@color/black"
        android:id="@+id/synonym_title_textview"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="a b c d e f g"
        android:textColor="#283593"
        android:id="@+id/synonyms_textview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Antonyms : "
        android:textColor="@color/black"
        android:id="@+id/antonyms_title_textview"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="a b c d e f g"
        android:textColor="#283593"
        android:id="@+id/antonyms_textview"/>
</LinearLayout>